<Page
    x:Class="LifeInsuranceAdvisor.ContactUS"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeInsuranceAdvisor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource Green}">

    <Grid Margin="0,10,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="AppName"
                   Text="Life Insurance Advisor"
                   HorizontalAlignment="Left"
                   FontSize="20"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="15,0"
                   Foreground="{StaticResource Dark_Blue}"
                   VerticalAlignment="Top"/>

        <TextBlock x:Name="title" 
                   Text="КОНТАКТ" 
                   TextWrapping="NoWrap"
                   FontSize="26"
                   FontFamily="Segoe Wp"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Style="{StaticResource HeaderTextBlockStyle}" 
                   Margin="15,20,15,0"
                   Foreground="{StaticResource White}"
                   VerticalAlignment="Top"/>
        <TextBlock x:Name="Line"
                   Text="_________________________"
                   Foreground="{StaticResource Dark_Blue}"
                   TextWrapping="NoWrap"
                   FontSize="48"
                   Margin="10,20,10,0"
                   VerticalAlignment="Top"/>

        <ScrollViewer Grid.Row="2">
            <StackPanel x:Name="MyStackPanel" Margin="20,0,20,0" Grid.Row="2" Width="340">
                <TextBlock HorizontalAlignment="Left"
                           Text="Име:"
                           FontSize="26"
                           Foreground="{StaticResource Dark_Blue}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           VerticalAlignment="Top" 
                           FontFamily="Times New Roman"/>
                <TextBox x:Name="NameTextBox" 
                         HorizontalAlignment="Left"
                         InputScope="Default"
                         Width="340"
                         PlaceholderText="Внесете име"
                         BorderBrush="{StaticResource Black}"
                         Background="{StaticResource White}"
                         VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left"
                           Text="Телефон:"
                           FontSize="26"
                           Foreground="{StaticResource Dark_Blue}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           VerticalAlignment="Top" 
                           FontFamily="Times New Roman"/>
                <TextBox x:Name="TelephoneTextBox" 
                         HorizontalAlignment="Left"
                         InputScope="TelephoneNumber"
                         Width="340"
                         PlaceholderText="Внесете телефон"
                         BorderBrush="{StaticResource Black}"
                         Background="{StaticResource White}"
                         VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left"
                           Text="Порака:"
                           FontSize="26"
                           Foreground="{StaticResource Dark_Blue}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           VerticalAlignment="Top" 
                           FontFamily="Times New Roman"/>
                <TextBox x:Name="MessageTextBox" 
                         HorizontalAlignment="Left"
                         InputScope="Default"
                         TextWrapping="Wrap"
                         Width="340"
                         Height="150"
                         PlaceholderText="Вашата порака..."
                         BorderBrush="{StaticResource Black}"
                         Background="{StaticResource White}"
                         VerticalAlignment="Top"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button x:ConnectionId='1' x:Name="CancelButton"
                            Content="ОТКАЖИ"
                            Width="150"
                            Background="{StaticResource Light_Blue}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                                                      />
                    <Button x:ConnectionId='2' x:Name="SendButton"
                            Content="ИСПРАТИ"
                            Width="150"
                            Margin="40,0,0,0"
                            Background="{StaticResource Light_Blue}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                                                    />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

