<Page
    x:Class="LifeInsuranceAdvisor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeInsuranceAdvisor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource Green}">

    <Grid Margin="0,10,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="AppName"
                   Text="Life Insurance Advisor"
                   HorizontalAlignment="Left"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="15,0"
                   Foreground="{StaticResource Dark_Blue}"
                   VerticalAlignment="Top" 
                   FontSize="20"/>

        <TextBlock x:Name="title" 
                   Text="Животно Осигурување" 
                   FontSize="30"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Style="{StaticResource HeaderTextBlockStyle}" 
                   Margin="15,20,15,0"
                   Foreground="{StaticResource White}"
                   VerticalAlignment="Top" 
                   FontFamily="Segoe WP"/>

        <TextBlock x:Name="Line"
                   Text="_________________________"
                   Foreground="{StaticResource Dark_Blue}"
                   TextWrapping="NoWrap"
                   FontSize="48"
                   Margin="10,30,10,0"
                   VerticalAlignment="Top"/>

        <StackPanel x:Name="MyStackPanel" Margin="20,10,20,30" Grid.Row="1" Width="340">
            <Grid x:Name="RadioButtonGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="SexTitle"
                       Text="Пол:"
                       Margin="0,14,0,16"
                       Grid.Column="0"
                       Style="{StaticResource TitleTextBlockStyle}"
                       FontSize="26"
                       Foreground="{StaticResource Dark_Blue}"
                       VerticalAlignment="Center" 
                       FontFamily="Times New Roman" 
                       HorizontalAlignment="Left" 
                       FontWeight="Normal"/>
                <RadioButton x:Name="Sex_Male"
                             Content="Машко"
                             Tag="Машко"
                             Background="{StaticResource Dark_Blue}"
                             GroupName="sex" 
                             MinWidth="130" 
                             Foreground="{StaticResource Dark_Blue}"
                             Grid.Column="1"
                             IsChecked="True"
                             FontSize="22" 
                             FontFamily="Times New Roman"/>
                <RadioButton x:Name="Sex_Female"
                             Content="Женско"
                             Foreground="{StaticResource Dark_Blue}"
                             Background="{StaticResource Dark_Blue}"
                             Tag="Женско"
                             Grid.Column="2"
                             GroupName="sex"
                             MinWidth="130" 
                             FontSize="22" 
                             FontFamily="Times New Roman"/>
            </Grid>
            <TextBlock x:Name="DateOfBirthTitle"
                       HorizontalAlignment="Left"
                       Text="Возраст:"
                       Foreground="{StaticResource Dark_Blue}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       FontSize="26"
                       VerticalAlignment="Top" FontFamily="Times New Roman" TextAlignment="Center" FontWeight="Normal"/>
            <ComboBox x:ConnectionId='1' x:Name="AgeComboBox" 
                      Width="340" 
                      BorderBrush="{StaticResource White}"
                      Background="{StaticResource Light_Blue}"
                      Foreground="{StaticResource Black}"
                      HorizontalAlignment="Center"
                                                                     
                      FontFamily="Times New Roman">
            </ComboBox>
            <TextBlock x:Name="DurationTitle"
                       HorizontalAlignment="Left"
                       Text="Траење на осигурувањето:"
                       FontSize="26"
                       Foreground="{StaticResource Dark_Blue}"
                       TextWrapping="Wrap"
                       Style="{StaticResource TitleTextBlockStyle}"
                       VerticalAlignment="Top" 
                       TextAlignment="Center" 
                       FontFamily="Times New Roman" 
                       FontWeight="Normal"/>
            <ComboBox x:Name="DurationComboBox" 
                      Width="340" 
                      BorderBrush="{StaticResource White}"
                      Background="{StaticResource Light_Blue}"
                      Foreground="{StaticResource Black}"
                      HorizontalAlignment="Center"
                      FontFamily="Times New Roman">
            </ComboBox>
            <TextBlock x:Name="PremiumTitle"
                       HorizontalAlignment="Left"
                       Text="Годишна премија во еур:"
                       FontSize="26"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource Dark_Blue}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       VerticalAlignment="Top" 
                       FontFamily="Times New Roman" 
                       FontWeight="Normal"/>
            <ComboBox x:Name="PremiumComboBox" 
                      HorizontalAlignment="Center" 
                      Width="340"
                      BorderBrush="{StaticResource White}"
                      Background="{StaticResource Light_Blue}"
                      Foreground="{StaticResource Black}"
                      FontFamily="Times New Roman">
            </ComboBox>
            <Button x:ConnectionId='2' x:Name="CalculateButton"
                    HorizontalAlignment="Center"
                    Content="ПРЕБАРАЈ"
                    Background="{StaticResource Light_Blue}"
                    Width="200"
                    Height="70"
                                                 
                    VerticalAlignment="Bottom" 
                    Margin="0,20"
                    FontFamily="Times New Roman" 
                    FontSize="18.667" BorderBrush="White" />
        </StackPanel>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar" Background="{StaticResource Dark_Blue}">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='3' Icon="Message" IsCompact="False" Label="ЧПП"                  />
                <AppBarButton x:ConnectionId='4' Icon="Globe" IsCompact="False" Label="За Нас"                      />
                <AppBarButton x:ConnectionId='5' Icon="ContactInfo" IsCompact="False" Label="Контакт"                      />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    
</Page>

