<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_jokes_list_margin"
    android:paddingTop="@dimen/activity_jokes_list_margin"
    android:paddingRight="@dimen/activity_jokes_list_margin"
    android:paddingBottom="@dimen/activity_jokes_list_margin" >
    
    <TextView
        android:id="@+id/txt_joke_content"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp" />
    
    <TextView
        android:id="@+id/txt_by"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
       	android:drawableLeft="@drawable/user"
        android:layout_below="@id/txt_joke_content"
        android:textStyle="italic"/>
    
    <TextView 
        android:id="@+id/txt_user_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txt_by"
      	android:layout_below="@id/txt_joke_content"
      	android:textStyle="italic"/>
    
    <TextView
        android:id="@+id/txt_joke_rating"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_joke_content"
        android:drawableLeft="@drawable/star" />
    
    
    
    
    

</RelativeLayout>
