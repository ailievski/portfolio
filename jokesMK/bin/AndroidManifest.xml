<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrej.ilievski.jokesmk"
    android:versionCode="1"
    android:versionName="1.0" >

    <supports-screens android:anyDensity="true" android:smallScreens="false" />
    
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.andrej.ilievski.jokesmk.ui.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.andrej.ilievski.jokesmk.ui.activities.MyProfileActivity"
            android:label="@string/my_profile">
        </activity>
        <activity 
            android:name="com.andrej.ilievski.jokesmk.ui.activities.JokesListActivity"
            android:label="@string/app_name"
            ></activity>
    </application>

</manifest>
